class Solution {
    public boolean isPalindrome(int x) {
        if(x<0){
           return false;
        }
        int z = 0;
        int y = x;
        int t = x/2;
        if(x%2==0){
            for(int i=0; i<x/2; i++){
            z++;
            y--;
}
        }else{
            for(int i=0; i<x/2; i++){
            z++;
            y--;
}
        z++;}
        
        
        
        System.out.println(z+" "+y);
        if(z==y){
            return true;
        }else{
            return false;
        }
        
    }
}
